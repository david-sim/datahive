{
  "application": {
    "name": "DataHive",
    "version": "1.0.0",
    "description": "Data management and API service platform"
  },
  "server": {
    "host": "localhost",
    "port": 8000,
    "debug": true,
    "max_connections": 100
  },
  "database": {
    "type": "postgresql",
    "host": "localhost",
    "port": 5432,
    "name": "datahive_db",
    "username": "datahive_user",
    "password": "placeholder_password",
    "pool_size": 10,
    "timeout": 30
  },
  "authentication": {
    "token_expiry_hours": 24,
    "secret_key": "your_secret_key_here",
    "issuer": "datahive",
    "algorithm": "HS256"
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "datahive.log",
    "max_file_size": "10MB",
    "backup_count": 5
  },
  "api": {
    "rate_limit": {
      "requests_per_minute": 100,
      "burst_limit": 200
    },
    "cors": {
      "enabled": true,
      "origins": ["*"],
      "methods": ["GET", "POST", "PUT", "DELETE"],
      "headers": ["Content-Type", "Authorization"]
    }
  },
  "cache": {
    "type": "redis",
    "host": "localhost",
    "port": 6379,
    "ttl": 3600,
    "max_connections": 20
  },
  "security": {
    "encryption_key": "placeholder_encryption_key",
    "salt_rounds": 12,
    "session_timeout": 1800
  }
}